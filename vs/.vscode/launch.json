{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensions-dir=${env:USERPROFILE}/.vscode/extensions"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js",
                "!**/node_modules/**"
            ]
        }
    ]
}